<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CMShorty.URLShortModul.Views.Overview"
             Style="{StaticResource PrimaryBackgroundStyle}"
             Shell.NavBarIsVisible="False">
    <ContentPage.Content>
        <StackLayout
            Margin="20">
            <Label
                Margin="0,20,0,20"
                Style="{StaticResource BaseTitleLabel}"
                HorizontalOptions="CenterAndExpand"
                FontSize="Title"
                Text="miethke-Shorty">
            </Label>
            <StackLayout>
                <Entry
                    Visual="Default"
                    Style="{StaticResource PrimaryEntry}"
                    Keyboard="Email"
                    Placeholder="Url eingben"
                    Text="{Binding EntryURL}">
                </Entry>
                <Button
                    Style="{StaticResource PrimaryButton}"
                    Text="Shorten"
                    Command="{Binding ShortCommand}">
                </Button>
            </StackLayout>
            <ListView
                HasUnevenRows="True"
                SeparatorVisibility="None"
                VerticalScrollBarVisibility="Never"
                HorizontalScrollBarVisibility="Never"
                ItemsSource="{Binding DataSource}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid
                                HorizontalOptions="Fill"
                                Margin="0,10,0,10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Label
                                    Style="{StaticResource BaseTitleLabel}"
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Text="Short URL:"
                                    FontSize="Medium"
                                    FontAttributes="Bold">
                                </Label>
                                <Label
                                    Style="{StaticResource BaseTitleSmallLabel}"
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    FontSize="Small"
                                    FontAttributes="Bold"
                                    Text="Original URL:">
                                </Label>
                                <Label
                                    Style="{StaticResource BaseTitleSmallLabel}"
                                    Grid.Row="2"
                                    Grid.Column="0"
                                    FontSize="Small"
                                    FontAttributes="Bold"
                                    Text="Erstellt Am:">
                                </Label>
                                <Label
                                    Style="{StaticResource BaseLabel}"
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Text="{Binding ShortURL}">
                                </Label>
                                <Label
                                    Style="{StaticResource BaseSmallLabel}"
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Text="{Binding OriginalURL}">
                                </Label>
                                <Label
                                    Style="{StaticResource BaseSmallLabel}"
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Text="{Binding CreatedAt, StringFormat='{0:dd.MM.yyyy}'}">
                                </Label>
                                <Label
                                    Grid.Row="3"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="2"
                                    HeightRequest="1"
                                    HorizontalOptions="Fill"
                                    Margin="0,10,0,0"
                                    Style="{StaticResource BaseSeperator}">
                                </Label>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button
                Style="{StaticResource PrimaryButton}"
                VerticalOptions="End"
                Text="Light/Dark Mode"
                Command="{Binding LightDarkModeCommand}">
            </Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>